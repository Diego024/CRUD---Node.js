<% include partials/_header %>

<div class="container mt-">
    <div class="row">
        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id_cliente %>" method="post">
                        <center>
                            <div class="form-group">
                                <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control" maxlength="50">
                            </div>
                            <div class="form-group">
                                <input type="text" name="apellido" value="<%= data.apellido %>" class="form-control" maxlength="50">
                            </div>
                            <div class="form-group">
                                <input type="text" name="telefono" value="<%= data.telefono %>" class="form-control" maxlength="9">
                            </div>    
                            <div class="form-group">
                                <input type="text" name="direccion" value="<%= data.direccion %>" class="form-control" maxlength="100">
                            </div>
                            <button type="submit" class="btn btn-primary">Actualizar Cliente</button>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%include partials/_footer%>